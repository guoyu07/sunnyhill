%h2= t 'helpers.titles.listing', name: Hotel.model_name.human

%table.table.table-striped
  %tr
    %th= t 'activerecord.attributes.hotel.name'
    %th= t 'activerecord.attributes.hotel.price'
    %th
    %th
    %th

  - @hotels.each do |hotel|
    %tr
      %td= hotel.name
      %td= hotel.price
      %td= link_to t('helpers.links.show'), hotel
      %td= link_to t('helpers.links.edit'), edit_hotel_path(hotel)
      %td= link_to t('helpers.links.destroy'), hotel, method: :delete, data: { confirm: t('helpers.prompt.confirm.destroy') }

= link_to t('helpers.links.new'), new_hotel_path, class: 'btn btn-primary'
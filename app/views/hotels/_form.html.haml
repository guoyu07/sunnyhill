= form_for @hotel, html: { class: 'form-horizontal' } do |f|
  = show_errors @hotel

  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name
  .control-group
    = f.label :price, class: 'control-label'
    .controls
      = f.number_field :price
  .control-group
    = f.label :url, class: 'control-label'
    .controls
      = f.text_field :url
    
  .form-actions
    = f.submit t('helpers.submit.update'), class: 'btn btn-primary'